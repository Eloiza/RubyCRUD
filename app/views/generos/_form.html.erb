<%= form_with model: genero do |form| %>
  <div class="row">
    <div class="col-xs-6">
      <%= form.label :nome %><br>
      <%= form.text_field :nome, :class => "form-control" %>
      <% genero.errors.full_messages_for(:nome).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>
  </div>

  <br>      
  <br>

  <div>
    <%= form.submit %>
  </div>
<% end %>